<div class="row clearfix">
    <%if todo_item.completed?%>
        <div class="complete">
            <%= button_to "Completar", complete_todo_list_todo_item_path(@todo_list, todo_item.id), method: :patch %>
        </div>
        <div class="todo_item">
            <p style="opacity: 0.4;"> <del> <%=todo_item.conteudo%> <del> </p>
        </div>
        <div class="lixo">
            <%= link_to "Delete item", todo_list_todo_item_path(@todo_list, todo_item.id), method: :delete, data: { confirm: 'Tem certeza?' } %>
        </div>
    <% else %>
        <div class="complete">
            <%= button_to "Completar item", complete_todo_list_todo_item_path(@todo_list, todo_item.id), method: :patch %>
        </div>
        <div class="todo_item">
            <p> <%=todo_item.conteudo%> </p>
        </div>
        <div class="lixo">
            <%= link_to "Deletar item", todo_list_todo_item_path(@todo_list, todo_item.id), method: :delete, data: { confirm: 'Tem certeza?' } %>
        </div>    
    <% end %>
</div>